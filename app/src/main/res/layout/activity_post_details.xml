<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Blog.PostDetails">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:id="@+id/title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn ethical hacking in 30 days and start cracking??"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:padding="5dp"
                android:id="@+id/author_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bruce Wayne"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView

                android:layout_marginLeft="5dp"
                android:id="@+id/date_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date here"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/blogPostImageLayout"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<ImageView-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:background="@color/colorBlack"-->
                        <!--android:layout_width="180dp"-->
                        <!--android:layout_height="110dp" />-->


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:lineSpacingExtra="10dp"
                android:id="@+id/contentDetails"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="Blog contetnt here"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>